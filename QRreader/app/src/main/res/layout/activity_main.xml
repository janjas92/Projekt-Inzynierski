<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zxing_barcode_view="http://schemas.android.com/apk/res-auto"
    xmlns:zxing_finder="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jendrzyca.piotr.qrreader.activities.MainActivity">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        zxing_barcode_view:zxing_framing_rect_width="300dp"
        zxing_barcode_view:zxing_framing_rect_height="500dp"

        ></com.journeyapps.barcodescanner.DecoratedBarcodeView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="45sp"
        android:textStyle="normal|bold"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="#000"
        android:alpha="0.1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:textSize="30sp"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="#000"
        android:alpha="0.1"
        android:layout_below="@+id/tvTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!--<com.journeyapps.barcodescanner.BarcodeView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--zxing_barcode_view:zxing_framing_rect_width="250dp"-->
        <!--zxing_barcode_view:zxing_framing_rect_height="50dp"></com.journeyapps.barcodescanner.BarcodeView>-->
</RelativeLayout>
